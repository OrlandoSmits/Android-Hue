<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.orlandosmits.hue">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.android.orlandosmits.hue.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.orlandosmits.hue.DetailActivity" />
        <activity
            android:name="com.android.orlandosmits.hue.BridgeActivity"
            android:label="@string/title_activity_bridge"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>